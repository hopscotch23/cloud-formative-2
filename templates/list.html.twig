{% extends "base.html.twig" %}

{% block content %}

<h3>Comments</h3>
<a href="/comments/add" class="btn btn-success btn-sm">
  <i class="glyphicon glyphicon-plus"></i>
  Add comment
</a>

{% for comment in comments %}
<div class="media">
  <a href="/comments/{{comment.id}}">
    <div class="media-left">
      {% if comment.image_url %}
        <img src="{{comment.image_url}}">
      {% else %}
        <img src="https://pbs.twimg.com/profile_images/910122244520730624/esBg9-1l.jpg" width=100 height=100>
      {% endif %}
    </div>
    <div class="media-body">
      <h4>{{comment.title}}</h4>
      <p>{{comment.author}}</p>
    </div>
  </a>
</div>
{% else %}
<p>No comments found</p>
{% endfor %}

{% if next_page_token %}
<nav>
  <ul class="pager">
    <li><a href="?page_token={{next_page_token}}">More</a></li>
  </ul>
</nav>
{% endif %}

{% endblock %}
